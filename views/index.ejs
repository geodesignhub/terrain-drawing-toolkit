                    pitchAngle = Cesium.Math.toRadians(-45.0);
                    break;
                case 'sw':
                    headingAngle = Cesium.Math.toRadians(225);
                    pitchAngle = Cesium.Math.toRadians(-45.0);
                    break;
                case 'nw':
                    headingAngle = Cesium.Math.toRadians(315);
                    pitchAngle = Cesium.Math.toRadians(-45.0);
                    break;

            }

            camera.setView({
